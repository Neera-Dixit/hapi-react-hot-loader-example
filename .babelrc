{
  "env": {
    "client": {
      "presets": [
        ["es2015", {"modules": false}],
        "flow",
        "stage-2",
        "react"
      ],
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "server": {
      "presets": [
        "flow",
        "stage-2",
        "react",
        ["env", {
          "targets": {
            "node": "8.2.0"
          }
        }]
      ],
      "plugins": [
        "transform-class-properties",
        "transform-object-rest-spread",
        "system-import-transformer"
      ],
      "ignore": [
        "main.js"
      ]
    }
  }
}
